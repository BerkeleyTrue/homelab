---
accessLog: {}
log:
  level: DEBUG

api:
  dashboard: true
  debug: true
  insecure: true

entrypoints:
  web:
    address: :80
  secureweb:
    address: :433
    http:
      tls:
        certResolver: cloudflare

serversTransport:
  insecureSkipVerify: true

providers:
  docker:
    endpoint: unix:///var/run/docker.sock
    exposedByDefault: false

  file:
    filename: /config.yml

certificatesResolvers:
  cloudflare:
    acme:
      email: {{ CLOUDFLARE_EMAIL }}
      storage: acme.json
      dnsChallenge:
        provider: cloudflare
        resolvers:
          - 1.1.1.1:53
          - 1.0.0.1:53
